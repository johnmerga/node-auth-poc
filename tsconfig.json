{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "index.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
